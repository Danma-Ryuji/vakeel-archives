<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contribute</title>
    <link rel="icon" type="image/x-icon" href="https://i.imgur.com/1IyJgw9.jpg">
    <!-- Add your CSS styles or link to an external stylesheet here -->
    <style>
      * {
          margin: 0;
          padding: 0;
          box-sizing: border-box;
      }

      body {
          font-family: "Trebuchet MS", Tahoma, sans-serif;
          background-image: url('https://i.imgur.com/NU9MN8r.jpg');
      }

      nav {
          display: flex;
          align-items: left;
          justify-content: space-between;
          background-color: #333;
          color: white;
          padding: 10px;
      }

      .imgcontainer {
          text-align: left;
      }

      img.avatar {
          width: 5%;
          border-radius: 50%;
          transition-duration: 2s;
      }

      img.avatar:hover {
          width: 15%;
          border-radius: 50%;
          transition-duration: 2s;
      }

      .container img {
        width: 15%;
        transition-duration: 1s;
        border-radius: 100%;
      }

      .container img:hover {
        width: 35%;
        transition-duration: 1s;
      }

      button {
            background-color: black;
            color: white;
            padding: 14px 20px;
            margin: 0px 0;
            border: none;
            border-radius: 0px 0px 20px 20px;
            cursor: pointer;
            width: 3  0%;
            transition-duration: 1s;
        }

        button:hover {
            background-color: grey;
            border-radius: 20px 20px 20px 20px;
            border: solid;
            margin: 0px 0;
            padding: 14px 20px;
            transition-duration: 1s;
            cursor: pointer;
            width: 3  0%;
        }

      .container {
          max-width: 500px;
          margin: 20px auto;
          background-color: white;
          border-radius: 20px;
          padding: 20px;
          box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.2);
      }

      .container label {
          display: block;
          margin-bottom: 8px;
      }

      .container input,
      .container select {
          width: 100%;
          padding: 12px 20px;
          margin: 8px 0;
          display: inline-block;
          border: 1px solid #ccc;
          border-radius: 4px;
          box-sizing: border-box;
      }

      .container button {
          background-color: black;
          color: white;
          padding: 14px 20px;
          border: none;
          border-radius: 20px;
          cursor: pointer;
          width: 100%;
          transition-duration: 1s;
      }

      .container button:hover {
          background-color: grey;
          border-radius: 20px;
          border: solid;
          padding: 14px 20px;
          transition-duration: 1s;
          cursor: pointer;
      }
  </style>
</head>

<body>
    <nav>
        <div class="imgcontainer">
            <img src="https://i.imgur.com/1IyJgw9.jpg" alt="Avatar" class="avatar">
        </div>
        <div>
            <a href="/dashboard"><button>Dashboard</button></a>
            <a href="/aboutus"><button>About Us</button></a>
            <a href="/logout"><button type="button" name="button">Logout</button></a>
        </div>
    </nav>

    <div class="container"> 
      <div>
        <img src="https://i.imgur.com/1IyJgw9.jpg" alt="Avatar">
      </div>
      <form class="" action="/contribute" method="post"> <!-- Adjust the action and method accordingly -->

        <!-- Reportability -->
        <label for="report">Reportability:</label>
        <select name="report" id="report">
            <option value="1">Reportable</option>
            <option value="0">Non-Reportable</option>
        </select>

        <!-- Appellant -->
        <label for="appellant">Appellant:</label>
        <input type="text" placeholder="Enter the name of the Appellant" name="appellant" id="appellant" required>

        <!-- Respondent -->
        <label for="respondent">Respondent:</label>
        <input type="text" placeholder="Enter the name of the Respondent" name="respondent" id="respondent" required>

        <!-- Judge -->
        <label for="judge">Judge:</label>
        <input type="text" placeholder="Enter the name of the Judge" name="judge" id="judge" required>

        <!-- Date -->
        <label for="date">Date of Judgement in Supreme Court of India:</label>
        <input type="date" name="date" id="date" required>

        <!-- Diary Number -->
        <label for="dno">Diary Number:</label>
        <input type="number" placeholder="Enter the Diary Number of the case" name="dno" id="dno" required>

        <!-- Year -->
        <label for="year">Year of Application in Supreme Court of India:</label>
        <select name="year" id="year">
            <!-- Assuming you want the years from 1950 to the current year -->
            <% for (let i = new Date().getFullYear(); i >= 1950; i--) { %>
                <option value="<%= i %>"><%= i %></option>
            <% } %>
        </select>

        <!-- Submit Button -->
        <button type="submit">Contribute</button>
    </form>
    </div>
    
</body>

</html>

