<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contribute</title>
    <link rel="icon" type="image/x-icon" href="https://i.imgur.com/1IyJgw9.jpg">
    <!-- Add your CSS styles or link to an external stylesheet here -->
    <style>
      * {
          margin: 0;
          padding: 0;
          box-sizing: border-box;
      }

      body {
          font-family: "Trebuchet MS", Tahoma, sans-serif;
          background-image: url('https://i.imgur.com/NU9MN8r.jpg');
      }

      nav {
          display: flex;
          align-items: left;
          justify-content: space-between;
          background-color: #333;
          color: white;
          padding: 10px;
      }

      .imgcontainer {
          text-align: left;
      }

      img.avatar {
          width: 5%;
          border-radius: 50%;
          transition-duration: 2s;
      }

      img.avatar:hover {
          width: 15%;
          border-radius: 50%;
          transition-duration: 2s;
      }

      .container img {
        width: 15%;
        transition-duration: 1s;
        border-radius: 100%;
      }

      .container img:hover {
        width: 35%;
        transition-duration: 1s;
      }

      button {
            background-color: black;
            color: white;
            padding: 14px 20px;
            margin: 0px 0;
            border: none;
            border-radius: 0px 0px 20px 20px;
            cursor: pointer;
            width: 3  0%;
            transition-duration: 1s;
        }

        button:hover {
            background-color: grey;
            border-radius: 20px 20px 20px 20px;
            border: solid;
            margin: 0px 0;
            padding: 14px 20px;
            transition-duration: 1s;
            cursor: pointer;
            width: 3  0%;
        }

      .container {
          max-width: 500px;
          margin: 20px auto;
          background-color: white;
          border-radius: 20px;
          padding: 20px;
          box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.2);
      }

      .container label {
          display: block;
          margin-bottom: 8px;
      }

      .container input,
      .container select {
          width: 100%;
          padding: 12px 20px;
          margin: 8px 0;
          display: inline-block;
          border: 1px solid #ccc;
          border-radius: 4px;
          box-sizing: border-box;
      }

      .container button {
          background-color: black;
          color: white;
          padding: 14px 20px;
          border: none;
          border-radius: 20px;
          cursor: pointer;
          width: 100%;
          transition-duration: 1s;
      }

      .container button:hover {
          background-color: grey;
          border-radius: 20px;
          border: solid;
          padding: 14px 20px;
          transition-duration: 1s;
          cursor: pointer;
      }
  </style>
</head>

<body>
    <nav>
        <div class="imgcontainer">
            <img src="https://i.imgur.com/1IyJgw9.jpg" alt="Avatar" class="avatar">
        </div>
        <div>
            <a href="/contribute"><button>Contribute</button></a>
            <a href="/aboutus"><button>About Us</button></a>
            <a href="/logout"><button type="button" name="button">Logout</button></a>
        </div>
    </nav>

    <div class="container"> 
      <div>
        <img src="https://i.imgur.com/1IyJgw9.jpg" alt="Avatar">
      </div>
      <ul>
        <% data.forEach(function (item) { %><br>
            <li>
              <strong>Reportability:</strong>
              <% if (item.report === 0) { %>
                  Non-Reportable
              <% } else if (item.report === 1) { %>
                  Reportable
              <% } else { %>
                  Unknown
              <% } %><br>
                <strong>Appellant:</strong> <%= item.appellant %><br>
                <strong>Respondent:</strong> <%= item.respondent %><br>
                <strong>Judge:</strong> <%= item.judge %><br>
                <strong>Date of Judgement:</strong> <%= new Date(item.date).toLocaleDateString() %><br>
                <strong>Diary Number:</strong> <%= item.dno %><br>
                <strong>Year:</strong> <%= item.year %><br><br>
            </li>
            <hr>
        <% }); %>
    </ul>
    </div>
    
</body>

</html>

